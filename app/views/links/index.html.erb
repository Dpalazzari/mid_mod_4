<div class='container'>
<h1>These are your links!</h1>
<%= link_to "Log out", logout_path, method: :DELETE %>
  <h1>Add Link</h1>
  <p>
    Links must have a valid url! i.e. 'https://www.example.com'
  </p>
  <div id="create-form">
    <label id="title-field">Title
      <input type="text" id="link-title" name="link-title" placeholder="Title of Link">
      <div class="validation-error"></div>
    </label>
    <label id="url-field">URL
      <input type="text" id="link-url" name="link-url" placeholder="What's the URL?">
      <div class="validation-error"></div>
    </label>
    <button id="create-link">Add Link</button>
  </div>
  <div id="link-filter">
    <label>Filter by Title
      <input type="text" id="filter-link">
    </label>
    <button id="show-read">Show Read</button>
    <button id="show-unread">Show Unread</button>
  </div>
  <div id='all-links'>

  </div>
</div>
